{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1,
      "default": "testdb"
    },
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 1,
      "default": "root"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "default": "1"
    },
    "server": {
      "title": "Server Address",
      "type": "string",
      "minLength": 1,
      "default": "localhost"
    },
    "port": {
      "title": "Port",
      "minimum": 1,
      "default": 5506,
      "type": "integer"
    },
    "maxRows": {
      "title": "Max rows to show",
      "minimum": 0,
      "default": 50,
      "type":"integer"
    }
  },

  "properties": {
    "server": {
      "$ref": "#/definitions/server"
    },
    "port": {
      "$ref": "#/definitions/port"
    },
    "database": {
      "$ref": "#/definitions/database"
    },
    "username": {
      "$ref": "#/definitions/username"
    },
    "password": {
      "$ref": "#/definitions/password"
    },
    "maxRows": {
      "$ref": "#/definitions/maxRows"
    }
  },
  "required": [
    "server",
    "port",
    "username"
  ]
}